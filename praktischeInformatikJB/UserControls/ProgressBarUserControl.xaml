<UserControl x:Class="praktischeInformatikJB.UserControls.ProgressBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:praktischeInformatikJB.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Width="500" Stroke="White" StrokeThickness="2" Fill="DarkOliveGreen" RadiusX="10" RadiusY="10"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Bundesliga Tipp 23/24" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Light" Foreground="White"/>
            <ProgressBar Grid.Row="1"  IsIndeterminate="True" Width="400" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Wait" />
            <TextBlock Grid.Row="2" Text="Loading..."  HorizontalAlignment="Center"  Foreground="White" />
        </Grid>
    </Grid>
</UserControl>
