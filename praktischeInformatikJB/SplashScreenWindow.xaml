<Window x:Class="praktischeInformatikJB.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktischeInformatikJB"
        xmlns:z="clr-namespace:praktischeInformatikJB.UserControls"
        mc:Ignorable="d"
        Title="" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Pictures/BackgroundSplashscreen.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <z:ProgressBarUserControl></z:ProgressBarUserControl>
        </Grid>
    </Grid>
</Window>
